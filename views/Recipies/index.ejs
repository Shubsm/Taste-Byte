<% include ../partials/header %> 

 <div class="container">
     <header class="jumbotron">
         <div class="container">
             <h1>Welcome To Taste Byte!</h1>
             <p>View our  Recipies from all over the world</p>
             <p>
                <a class="btn btn-primary btn-large" href="/Recipies/new">Add New Recipie</a>
             </p>
         </div>
     </header>
     
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% Recipies.forEach(function(Recipie){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= Recipie.image %>">
                   <div class="caption">
                       <h4><%= Recipie.name %></h4>
                   </div>
                   <p>
                       <a href="/Recipies/<%= Recipie._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>
